<style>* {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    html,
    body {
        height: 100%;
        width: 100%;
    }
    .container {
        width: 100%;
        height: 100%;
        text-align: center;
    }
    .container:after {
        content: '';
        display: inline-block;
        vertical-align: middle;
        height: 100%;
    }
    .loader {
        display: inline-block;
        vertical-align: middle;
        -webkit-filter: url(#goo);
        filter: url(#goo);
        position: relative;
    }
    .loader__item_big {
        width: 100px;
        height: 100px;
        background: #000;
        border-radius: 50%;
    }
    .loader__item {
        position: absolute;
        left: 50%;
        top: 50%;
        margin: -30px -30px;
        /*
          animation: small_circle 2s infinite;*/
        height: 90px;
    }
    .loader__item:after {
        content: '';
        width: 60px;
        height: 60px;
        background: #ff0000;
        position: absolute;
        border-radius: 50%;
    }
    .first {
        -webkit-animation: small_circle1 2s ease infinite;
        animation: small_circle1 2s ease infinite;
    }
    @-webkit-keyframes small_circle1 {
        0% {
            -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
            height: 190px;

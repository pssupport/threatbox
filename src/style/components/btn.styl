.btn {
  background #0067b0
  color #fff
  font-weight 300
  padding 7px 17px
  border-radius 50px
  display: inline-block
  font-size 14px
  font-weight 300
  cursor pointer
  transition all 300ms linear
  &_circle {
    font-size: 0 !important;
    color: transparent
    padding: 0 !important;

    height: 100px;
    width: 100px;
    border-radius: 50%;
  }
}

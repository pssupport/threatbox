* {
  padding 0
  margin 0
  box-sizing border-box
}




html, body {
  height: 100%
  width: 100%
  font-family "Ubuntu", Arial, sans-serif;
}

.header {
  width 100%
  background url("../../img/header__bg.png") center
  height 64px

  &__container {
    width 1170px
    height 100%
    margin 0 auto
    font-size 0
  }

  &__logo {
    width 225px
    height 29px
    background url("../../img/logo_white.png")
    float left
    margin: 20px 0 0 0
  }

  &__btn {
    float right
    margin: 17px 22px 0

  }

}





